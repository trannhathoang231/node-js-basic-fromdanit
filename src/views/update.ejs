<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post update page</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>

    <div class="update-user-container">
        <form action="/post-update-user" method="POST">
            <div>
                <label for="firstName">First Name: </label>
                <input type="text" name="firstName" value="<%= dataUser.firstName %>">
            </div>
            <div>
                <label for="lastName">Last Name: </label>
                <input type="text" name="lastName" value="<%= dataUser.lastName %>">
            </div>
            <div>
                <label for="email">Email: </label>
                <input type="email" name="email" value="<%= dataUser.email %>">
            </div>
            <div>
                <label for="address">Address: </label>
                <input type="text" name="address" value="<%= dataUser.address %>">
            </div>

            <input type="text" name="id" value="<%= dataUser.id %>" hidden>

            <div>
                <button type="submit">Submit</button>
            </div>
        </form>
    </div>

</body>

</html>